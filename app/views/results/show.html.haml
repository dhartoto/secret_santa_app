.container
  .row
    .col-md-12
      %h1
        = "Secret Santa #{ @year.year }"
      %ol.breadcrumb
        %li
          %a{ href: root_path }
            Home
        %li.active
          Results
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          Secret Santa List
        %table.table
          %thead
            %tr
              %th
              %td.text-center
                %h4 Recipient
              %td.text-center
                %h4 Secret Santa
              %td.text-center
                %h4
                  = "Secret Santa #{@year.year - 1}"
          %tbody
            - @year.participants.each_with_index do |participant, index|
              %tr
                %th
                  = index + 1
                %td.text-center
                  = participant.full_name
                %td.text-center
                  = participant.current_secret_santa
                %td.text-center
                  = participant.last_secret_santa
